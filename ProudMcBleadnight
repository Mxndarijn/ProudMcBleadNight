package me.mar1067.ProudStaff;

import org.bukkit.entity.Zombie;
import org.bukkit.event.entity.EntityDamageEvent;
import org.bukkit.plugin.java.JavaPlugin;

public class ProudStaff extends JavaPlugin{
	@Override
	public void onEnable() {
		
	}
	
	
	
	public void bandietedamageevent(EntityDamageEvent Event) {
		if(Event.getEntity().getCustomName().contains("Bandieten")) {
			
			Zombie zomb = (Zombie) Event.getEntity();
			double zombhealthcurrent = zomb.getHealth(); 
			zomb.setCustomName("§7 Bandieten | " + zombhealthcurrent + " ♥" );
		}
	}
}
